+	boxlegacy[0xE4] = BE_LEGACY_LEN - 3; /* U+1FBE4 */
+	boxlegacy[0xE5] = BE_LEGACY_LEN - 2; /* U+1FBE5 */
+	boxlegacy[0xE6] = BE_LEGACY_LEN - 1; /* U+1FBE6 */
