+			be_drawwedge(ssbuf, buf, idx++, x0, y1, x0, y1e, x1e, y1, 1, 0);   /* U+1FB5C: 'ü≠ú' */
+		be_drawwedge(ssbuf, buf, idx++, x1e, y2, x1, y2e, x1e, y2e, 0, invert);    /* U+1FB47: 'ü≠á', U+1FB5D: 'ü≠ù' */
+		be_drawwedge(ssbuf, buf, idx++, x1e, y2, x0, y2e, x1e, y2e, 0, invert);    /* U+1FB48: 'ü≠à', U+1FB5E: 'ü≠û' */
+		be_drawwedge(ssbuf, buf, idx++, x1e, y1, x1, y2e, x1e, y2e, 0, invert);    /* U+1FB49: 'ü≠â', U+1FB5F: 'ü≠ü' */
+		be_drawwedge(ssbuf, buf, idx++, x1e, y1, x0, y2e, x1e, y2e, 0, invert);    /* U+1FB4A: 'ü≠ä', U+1FB60: 'ü≠†' */
+		be_drawwedge(ssbuf, buf, idx++, x1e, y0, x1, y2e, x1e, y2e, 0, invert);    /* U+1FB4B: 'ü≠ã', U+1FB61: 'ü≠°' */
+		be_drawwedge(ssbuf, buf, idx++, x1, y0, x1e, y0, x1e, y0e, 0, invert ^ 1); /* U+1FB4C: 'ü≠å', U+1FB62: 'ü≠¢' */
+		be_drawwedge(ssbuf, buf, idx++, x0, y0, x1e, y0, x1e, y0e, 0, invert ^ 1); /* U+1FB4D: 'ü≠ç', U+1FB63: 'ü≠£' */
+		be_drawwedge(ssbuf, buf, idx++, x1, y0, x1e, y0, x1e, y1e, 0, invert ^ 1); /* U+1FB4E: 'ü≠é', U+1FB64: 'ü≠§' */
+		be_drawwedge(ssbuf, buf, idx++, x0, y0, x1e, y0, x1e, y1e, 0, invert ^ 1); /* U+1FB4F: 'ü≠è', U+1FB65: 'ü≠•' */
+		be_drawwedge(ssbuf, buf, idx++, x1, y0, x1e, y2e, x1e, y0, 0, invert ^ 1); /* U+1FB50: 'ü≠ê', U+1FB66: 'ü≠¶' */
+		if (i == 0)
+			be_drawwedge(ssbuf, buf, idx++, x0, y1, x0, y1e, x1e, y1e, 3, 0);  /* U+1FB51: 'ü≠ë' */
+		else
+			be_drawwedge(ssbuf, buf, idx++, x0, y1, x1e, y1e, x1e, y1, 1, 0);  /* U+1FB67: 'ü≠ß' */
+	}
+	for (invert = 1, i = 0; i < 2; i++, invert ^= 1) {
+		be_drawwedge(ssbuf, buf, idx++, x0, y0, x0, y2e, x1, cy, 0, invert);       /* U+1FB68: 'ü≠®', U+1FB6C: 'ü≠¨' */
+		be_drawwedge(ssbuf, buf, idx++, x0, y0, x1, cy, x1e, y0, 0, invert);       /* U+1FB69: 'ü≠©', U+1FB6D: 'ü≠≠' */
+		be_drawwedge(ssbuf, buf, idx++, x1e, y0, x1, cy, x1e, y2e, 0, invert);     /* U+1FB6A: 'ü≠™', U+1FB6E: 'ü≠Æ' */
+		be_drawwedge(ssbuf, buf, idx++, x0, y2e, x1, cy, x1e, y2e, 0, invert);     /* U+1FB6B: 'ü≠´', U+1FB6F: 'ü≠Ø' */
+	}
+
+	/* U+1FB9A: 'üÆö' */
+	bd_drawrect(ssbuf, 0, 0, 0, ssbuf->cw, ssbuf->ch, 0);
+	bd_drawtriangle(ssbuf, 0, x0, y0, x1, cy, x1e, y0, 255);
+	bd_drawtriangle(ssbuf, 0, x0, y2e, x1, cy, x1e, y2e, 255);
+	bd_downsample(buf, idx + 42, ssbuf, 0, 1);
+
+	/* U+1FB9B: 'üÆõ' */
+	bd_drawrect(ssbuf, 0, 0, 0, ssbuf->cw, ssbuf->ch, 0);
+	bd_drawtriangle(ssbuf, 0, x0, y0, x0, y2e, x1, cy, 255);
+	bd_drawtriangle(ssbuf, 0, x1e, y0, x1, cy, x1e, y2e, 255);
+	bd_downsample(buf, idx + 43, ssbuf, 0, 1);
+
+	return idx;
+}
+
+void
+be_drawwedge(BDBuffer *ssbuf, BDBuffer *buf, int idx, int x1, int y1, int x2, int y2, int x3, int y3, int block, int invert)
+{
+	bd_drawrect(ssbuf, 0, 0, 0, ssbuf->cw, ssbuf->ch, invert ? 255 : 0);
+	bd_drawtriangle(ssbuf, 0, x1, y1, x2, y2, x3, y3, invert ? 0 : 255);
+	if (block) {
+		y1 = ssbuf->ch * (block - 1) / 3;
+		y2 = ssbuf->ch * block / 3;
+		bd_drawrect(ssbuf, 0, 0, y1, ssbuf->cw, y2 - y1, invert ? 0 : 255);
+	}
+	bd_downsample(buf, idx, ssbuf, 0, 1);
+}
+
+int
