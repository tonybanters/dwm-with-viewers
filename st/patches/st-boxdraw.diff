+		be_drawwedge(ssbuf, buf, idx++, x0, y0, x0, y0e, x1e, y0, 0, invert ^ 1);  /* U+1FB42: 'ü≠Ç', U+1FB58: 'ü≠ò' */
+		be_drawwedge(ssbuf, buf, idx++, x0, y0, x0, y1e, x0e, y0, 0, invert ^ 1);  /* U+1FB43: 'ü≠É', U+1FB59: 'ü≠ô' */
